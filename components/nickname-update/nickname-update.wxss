/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s;
  pointer-events: none;
}

.mask.show {
  opacity: 1;
  pointer-events: auto;
}

/* 弹窗主体 */
.popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 20rpx;
  z-index: 1001;
  opacity: 0;
  transform: translate(-50%, -50%) scale(0.9);
  transition: all 0.3s;
  pointer-events: none;
}

.popup.show {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1);
  pointer-events: auto;
}

/* 标题栏 */
.header {
  padding: 40rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 内容区 */
.content {
  padding: 40rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

/* 按钮区 */
.footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.btn {
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.cancel {
  border-right: 1rpx solid #f0f0f0;
}

.confirm {
  color: #007aff;
  font-weight: bold;
}