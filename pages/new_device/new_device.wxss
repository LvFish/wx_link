/* 中继器标题 */
.repeater-header {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  width: 100%;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 27.44rpx;
  color: rgba(17, 17, 17, 1);
  text-align: left;
  vertical-align: top;
}
.repeater-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
}

/* 玩具列表 */
.toy-list {
  overflow: hidden;
  width: 100%;
}

.toy-cat image {
  position: absolute;
  right: 30rpx;
  top: 10rpx;
  width: 120rpx;
  height: 120rpx;
}
.toy-item {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  background: #FFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.toy-title {
  font-size: 28rpx;
  color: #333;
}
.gray-text {
  color: #CCC; /* 禁用态文字颜色 */
}

/* 删除按钮 */
.delete-btn {
  position: fixed; /* 固定定位 */
  bottom: 30rpx;   /* 距离底部 30rpx */
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #E6E6E6;
  color: #666;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0 auto;
}

/* 中继器切换弹窗 */
.repeater-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 200rpx;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 100;
}

.repeater-modal.show {
  opacity: 1;
  visibility: visible;
  padding-top: 100rpx;
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx;
  width: 90%;
  max-width: 680rpx;
  position: relative;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.repeater-list {
  padding: 20rpx 30rpx;
}

.repeater-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.repeater-item:last-child {
  border-bottom: none;
}

.repeater-item.selected {
  color: #409EFF;
}

.repeater-item-name {
  font-size: 28rpx;
  color: #333;
}

.repeater-item.selected .repeater-item-name {
  color: #409EFF;
}

/* 弹窗下方添加按钮 */
.add-repeater-btn {
  position: absolute;
  bottom: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #409EFF;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(64, 158, 255, 0.3);
  z-index: 10;
}

.add-repeater-btn2 {
  background-color: rgba(191, 113, 34, 1);
  border: 1rpx solid ;
  border-radius: 40rpx;
  width: 140rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

/* 事件冒泡阻止 */
.stopPropagation {
  pointer-events: none;
}
