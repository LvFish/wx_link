<view class="container">
  <!-- 个人中心头部 -->
  <view class="profile-header">
    <view class="user-info">
      <view class="avatar-container" bindtap="onTapAvatar">
        <image class="avatar" src="{{avatarUrl || 'https://pic.imgdb.cn/item/64367f2c0d2dde5777557749.png'}}" mode="aspectFill"></image>
      </view>
      <view class="user-detail" bindtap="onTapAvatar">
        <view class="nickname">{{userNickName || '点击登陆'}}</view>
      </view>
      <view class="right-arrow" wx:if="{{userNickName}}">
        <image src="/images/ic_arrow_right.png" mode="aspectFit"></image>
      </view>
    </view>
  </view>


