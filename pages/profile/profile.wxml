  <view class="function-buttons">
    <view class="button-group">
      <view class="function-button" bindtap="goToFamily">
        <!-- <view class="button-icon">
          <image src="/images/ic_family.png" mode="aspectFit"></image>
        </view> -->
        <view class="button-text">操作指引</view>
        <view class="button-arrow">
          <image src="/images/ic_arrow_right.png" mode="aspectFit"></image>
        </view>
      </view>
    </view>

    <view class="button-group">
      <view class="function-button" bindtap="goToSuggest">
        
        <view class="button-text">建议与反馈</view>
        <view class="button-arrow">
          <image src="/images/ic_arrow_right.png" mode="aspectFit"></image>
        </view>
      </view>
    </view>
    <view class="button-group">
      <view class="function-button" bindtap="goToPrivacy">
       
        <view class="button-text">隐私保护说明</view>
        <view class="button-arrow">
          <image src="/images/ic_arrow_right.png" mode="aspectFit"></image>
        </view>
      </view>
    </view>
    <view class="button-group">
      <view class="function-button" bindtap="goToAboutUs">
        <view class="button-text">关于我们</view>
        <view class="button-arrow">
          <image src="/images/ic_arrow_right.png" mode="aspectFit"></image>
        </view>
      </view>
