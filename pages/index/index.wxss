/**index.wxss**/
.container {
  padding: 20px;
}

.title_container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
}

.add-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 10px;
  height: 2px;
  background-color: #333;
  transform: translate(-50%, -50%);
}

.add-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 2px;
  height: 10px;
  background-color: #333;
  transform: translate(-50%, -50%);
}

.add-icon:active {
  background-color: #eee;
}

.add-icon {
  width: 20px;
  height: 20px;
  margin-left: 170px;
  position: relative;
  border: 1px solid #ccc;
  border-radius: 50%;
  cursor: pointer;
}


.title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: bold;
}

.device-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
  padding: 10px 0;
}

.device-name {
  margin-left: 10px;
  white-space: nowrap;
  font-size: 14px;
}

.device-status {
  margin-left: 10px;
  font-size: 12px;
  color: #999;
}

.device-actions {
  display: flex;
  width: 200px;
}

.action-btn {
  margin-left: 30px;
  padding: 5px 10px;
  font-size: 12px;
}