/* pages/personal/suggest/suggest.wxss */
.suggest-container {
  min-height: 100vh;
  background: linear-gradient(145.25deg, rgba(255, 242, 242, 1) 0%, rgba(232, 243, 255) 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.section {
  margin-bottom: 60rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.section-description {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
  display: block;
}

.feedback-input {
  width: 100%;
  height: 300rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background-color: #fafafa;
}

.feedback-input:focus {
  border-color: #409EFF;
  background-color: #fff;
}

.char-count {
  text-align: right;
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.image-upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
}

.image-upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}

.plus-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.contact-input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background-color: #fafafa;
}

.contact-input:focus {
  border-color: #409EFF;
  background-color: #fff;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background-color: #409EFF;
  color: #fff;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.submit-btn:active {
  background-color: #3080e0;
  transform: scale(0.98);
}

.submit-btn.disabled {
  background-color: #ccc;
  color: #999;
}

.submit-btn.disabled:active {
  transform: none;
  background-color: #ccc;
}