/* pages/setting/setting.wxss */
.container {
  justify-content: flex-start;
  padding: 30rpx;
  /* background-color: #f6f6f6; */
  background: linear-gradient(145.25deg, rgba(255, 242, 242, 1) 0%, rgba(232, 243, 255) 100%);
  min-height: 100vh;
}
.function-buttons {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 16rpx;
  /* gap: 30rpx; */
  width: 100%;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.function-button {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  width: 100%;
  transition: transform 0.2s, box-shadow 0.2s;
}

.function-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.button-text{
  font-size: 28rpx;
  color: #333;
  flex: 0.9; /* 标题自适应剩余空间 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.button-image {
  width: 120rpx !important;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  padding: 0 !important;
  margin: 0 !important;
  border: 2rpx solid #f0f0f0;
  flex-shrink: 0;
}
.avator {
  width: 100%;
  height: 100%;
}

.button-image image {
  width: 100%;
  height: 100%;
}

.button-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.button-icon image {
  width: 100%;
  height: 100%;
}

.button-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.button-arrow {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.button-arrow image {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.repeater-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 200rpx;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 100;
}

.repeater-modal.show {
  opacity: 1;
  visibility: visible;
  padding-top: 50%;
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx;
  width: 90%;
  max-width: 680rpx;
  position: relative;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.repeater-list {
  padding: 20rpx 30rpx;
}

.repeater-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.repeater-item:last-child {
  border-bottom: none;
}

.repeater-item.selected {
  color: #409EFF;
}

.repeater-item-name {
  font-size: 28rpx;
  color: #333;
}

.repeater-item.selected .repeater-item-name {
  color: #409EFF;
}