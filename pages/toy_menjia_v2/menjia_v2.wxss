.remote-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(145.25deg, rgba(255, 242, 242, 1) 0%, rgba(232, 243, 255) 100%);
  min-height: 100vh;
  padding: 60rpx 30rpx;
}

/* 屏幕样式 */
.screen {
  width: 70%;
  max-width: 400rpx;
  height: 150rpx;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 100rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 100rpx;
  /* 新增虚线边框 */
  border: 4rpx dashed #ccc; /* 2rpx粗细的灰色虚线 */
  /* 恢复阴影增强层次感 */
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  font-size: 30rpx;
  color: #ccc; 
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 可选，同时实现水平居中 */
  display: flex;
}

/* 速度控制区域 */
.speed-section {
  width: 95%;
  margin: 20rpx 0;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.speed-header {
  margin-bottom: 20rpx;
}

.speed-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.speed-controls {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
}

.speed-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #cccccc;
  background-color: #ffffff;
  font-size: 40rpx;
  line-height: 80rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;
  box-sizing: border-box;
  min-width: 80rpx;
  max-width: 80rpx;
}

.speed-btn::after {
  border: none;
}

.speed-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

/* 风速进度条 */
.wind-speed-bar {
  width: 100%;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  overflow: hidden;
  position: relative;
}

.wind-speed-progress {
  height: 100%;
  background-color: #1aad19;
  border-radius: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 30rpx;
}

.wind-speed-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 底部按钮区域 */
.bottom-buttons {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 50rpx 0;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.control-btn {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 30rpx;
  margin: 0 30rpx;
  min-width: 150rpx;
  max-width: 150rpx;
  min-height: 150rpx;
  max-height: 150rpx;
  box-sizing: border-box;
  text-align: center;
}

.control-btn::after {
  border: none;
}

.power-on-btn {
  background-color: #ffffff;
  border: 2rpx solid #cccccc;
  color: #333333;
}

.standby-btn {
  background-color: #ffffff;
  border: 2rpx solid #cccccc;
  color: #333333;
}

.retract-btn {
  background-color: #ffffff;
  border: 2rpx solid #cccccc;
  color: #333333;
}

.power-btn {
  background-color: #ff3b30;
  color: #ffffff;
}

/* 底部提示文字 */
.bottom-tip {
  width: 90%;
  margin-top: 60rpx;
  text-align: center;
  padding: 0 20rpx;
}

.bottom-tip .tip-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 36rpx;
}