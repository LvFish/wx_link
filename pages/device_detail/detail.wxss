.container {
  padding: 20px;
}

.list {
  margin-bottom: 20px;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.list-item-img {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.list-item-desc {
  flex: 1;
}

.list-item-delete {
  background-color: red;
  color: white;
  padding: 5px 10px;
  border-radius: 5px;
}

.add-button {
  padding: 10px 20px;
  background-color: green;
  color: white;
  border-radius: 5px;
  text-align: center;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  width: 80%;
  max-width: 300px;
  border-radius: 10px;
}

.modal-header {
  padding: 10px;
  text-align: center;
  border-bottom: 1px solid #ccc;
}

.modal-body {
  padding: 10px;
}

.option {
  padding: 10px;
  border-bottom: 1px solid #ccc;
  cursor: pointer;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  padding: 10px;
}

.modal-footer button {
  padding: 5px 10px;
  border: none;
  border-radius: 5px;
  background-color: #ccc;
  color: white;
  cursor: pointer;
}