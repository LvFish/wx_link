.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 玩具列表 */
.toy-list {
  overflow: hidden;
  width: 100%;
  /* padding: 10rpx;  */

}

.toy-item {
  display: flex;
  border-radius: 16rpx;
  background-color: #fff;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  margin-top: 30rpx;
}

.toy-item:last-child {
  border-bottom: none;
}

.toy-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.toy-image image {
  width: 100%;
  height: 100%;
}

.toy-info {
  flex: 1;
  min-width: 0;
}

.toy-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.delete-button {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.delete-button image {
  width: 100%;
  height: 100%;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
  opacity: 0.6;
}

.empty-icon image {
  width: 100%;
  height: 100%;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #ccc;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  width: 80%;
  max-width: 300px;
  border-radius: 10px;
}

.modal-header {
  padding: 10px;
  text-align: center;
  border-bottom: 1px solid #ccc;
}

.modal-body {
  padding: 10rpx;
}

.option {
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
  cursor: pointer;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  padding: 10px;
}

.modal-footer button {
  padding: 5px 10px;
  border: none;
  border-radius: 5px;
  background-color: #ccc;
  color: white;
  cursor: pointer;
}