<view class="container">
  <view class="list">
    <view class="list-item" wx:for="{{list}}" wx:key="mappingId" bindtap="onListClick" data-id="{{item.mappingId}}" data-index="{{index}}">
      <image class="list-item-img" src="{{item.url}}" mode="aspectFill"></image>
      <view class="list-item-desc" >{{item.baseDeviceName}}</view>
      <button class="list-item-delete" catchtap="deleteItem" data-index="{{index}}" hover-stop-propagation="true">删除</button>
    </view>
  </view>
  <button class="add-button" bindtap="showModal">添加玩具</button>

  <!-- 弹窗 -->
  <view class="modal" hidden="{{!isModalShow}}">
    <view class="modal-content">
      <view class="modal-header">选择添加内容</view>
      <view class="modal-body">
        <view class="option" wx:for="{{addOptions}}" wx:key="id" bindtap="selectOption" data-index="{{index}}">
          {{item.name}}
        </view>
      </view>
      <view class="modal-footer">
        <button bindtap="hideModal">取消</button>
      </view>
    </view>
  </view>
</view>