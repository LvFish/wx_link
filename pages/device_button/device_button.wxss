.remote-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #111111;
  height: 100vh;
  padding: 60rpx 30rpx;
}

/* 屏幕样式 */
.screen {
  width: 90%;
  max-width: 700rpx;
  height: 400rpx;
  background-color: #CCCCCC;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

/* 按键容器 */
.buttons-container {
  width: 100%;
  margin-top:120rpx;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 行布局 */
.row {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.row-middle {
  justify-content: space-between; /* 左右按钮分别居左和居右 */
}

.row-extend {
  justify-content: space-between; /* 左右按钮分别居左和居右 */
}

.row-bottom {
  margin-bottom: 0; /* 最后一行没有底部间距 */
}

/* 单个按键样式 */
.btn {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.12);
}

.btn image {
  width: 140rpx;
  height: 140rpx;
}

.btn2 {
  width: 50%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.btn2:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.12);
}

.btn2 button {
  width: 240rpx;
  height: 120rpx;
  background: rgba(69, 69, 69, 1);
  align-items: center;
  padding: 20rpx 20rpx 20rpx 20rpx;
  font-size: 48rpx;
  font-weight: 400;
  text-align: center;
  color: rgba(255, 255, 255, 1);
}